doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')

    script(src='/js/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/js/script.js')

  body
    nav.navbar.navbar-default.navbar-home
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/')
            img.logo(src='/img/logo.png')
        div.collapse.navbar-collapse#mobile
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/login') Login
            li
              a(href='/register') Register
    .container-fluid.login.cover
      .row
        div.col-md-4.col-md-offset-4.login-form
          h3 Sign in
          if message
            div.alert.alert-danger !{message}
          form(role='form',method='POST',action='')
            div.form-group
              label(for='email') Email:
              input.form-control(type='email', placeholder='Enter email', name='email')
            div.form-group
              label(for='password') Password:
              input.form-control(type='password', placeholder='Enter password', name='password')
            .checkbox
              label
                input(type='checkbox')
                |  Remember me
            button.btn.btn-default(type='submit') Login
